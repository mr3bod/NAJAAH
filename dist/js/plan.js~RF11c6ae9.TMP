function GetNewTerms(cTerm) {
    var fTerm= [];
    var sTerm= [];
    var first = true;
    var newTerms;
    
    for (var i = 0; i < cTerm.length; i++) {
        if (i === 0) {
            fTerm.push(cTerm[i]);
        } else {
            if (fTerm[0].term === cTerm[i].term) {
                fTerm.push(cTerm[i]);
            } else {
                sTerm.push(cTerm[i]);
            }
        }
    }
    if (fTerm[0].term < sTerm[0].term) {
        newTerms = [fTerm, sTerm];
    } else {
        newTerms = [sTerm, fTerm];
    }
    return newTerms;
}

function getCookie() {
